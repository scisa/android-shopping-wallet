    <style name="BlueDarkTheme" parent="Theme.MaterialComponents">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryBlueDarkTheme</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariantBlueDarkTheme</item>
        <item name="colorSecondary">@color/colorSecondaryBlueDarkTheme</item>
